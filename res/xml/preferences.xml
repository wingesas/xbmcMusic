<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <de.wingesas.android.xbmcMusic.preference.HostPreference
        android.key="host"
        android:dialogTitle="@string/host_pref_dialog_title"
        android:summary="@string/host_pref_summary"
        android:title="@string/host_pref_title" />

    <ListPreference
